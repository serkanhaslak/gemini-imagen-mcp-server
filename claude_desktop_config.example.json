{
  "mcpServers": {
    "gemini-imagen": {
      "command": "npx",
      "args": [
        "-y",
        "gemini-imagen-mcp-server",
        "--model", "imagen-4-ultra",
        "--batch",
        "--max-batch-size", "4",
        "--display-mode", "auto"
      ],
      "env": {
        "GEMINI_API_KEY": "your-gemini-api-key-here"
      }
    }
  }
} 